//@import "variable.styl"

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  width 100%
  height 100%
  overflow hidden
.router-parent
  width 100%
  height calc(100% - 95px)
  margin-top 45px
  overflow auto
.cover-parent
  position absolute
  top 0px
  bottom 0px
  left 0px
  right 0px
  z-index 500
  background-color #F2F2F2
.dtl-header
  width:100%
  height: 45px
  background-color #303030
  .dtl-h-cont
    height 100%
    display flex
    justify-content flex-start
    align-items center
    color #fff
    .iconfont
      margin-left 15px